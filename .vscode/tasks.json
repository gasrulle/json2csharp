{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^([^\\s].*?)\\((\\d+),(\\d+)\\): (error|warning|info) (TS\\d+): (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "code": 5,
                    "message": 6
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[esbuild\\]",
                    "endsPattern": "^\\[esbuild\\] (Build complete|Watching)"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "compile",
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "package",
            "type": "npm",
            "script": "package",
            "problemMatcher": "$tsc",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Package json2csharp VSIX",
            "type": "shell",
            "command": "npx @vscode/vsce package",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "close": false
            }
        }
    ]
}
